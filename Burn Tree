/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    int hight(TreeNode* root){
        if(!root)return 0;
        else return 1+ max(hight(root->left),hight(root->right));
    }
    int solve(TreeNode* root,int & time,int target,TreeNode* &targetNode){
        if(!root)return 0;
        if(root->val==target){
            targetNode=root;
            return -1;
        }
        int left= solve(root->left,time,target,targetNode);
        int right=solve(root->right,time,target,targetNode);
         // if butrn from left side
        if(left<0){
            time=max(time,abs(left)+right);
            return left-1;
        }
        //burn from right
        if(right<0){
            time=max(time,abs(right)+left);
            return right-1;
        }
        //else height of tree;
        return max(left,right)+1;

    }
    int amountOfTime(TreeNode* root, int start) {
        int time=0;
        TreeNode* targetNode=nullptr;
        solve(root,time,start,targetNode);
        int burntimebelow=hight(targetNode);
        return max(time,burntimebelow-1);
        
    }
};
